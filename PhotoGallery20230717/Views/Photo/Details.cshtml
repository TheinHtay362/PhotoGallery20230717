@model PhotoGallery20230717.Models.PhotoModel

@{
    Layout = "_AdminLteLayout";
    ViewData["Title"] = "Details";
}
<h1>Details</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Image</h4>
              @if (Model.ImageData != null && Model.ImageData.Length > 0)
               {
                  <img class="img-fluid rounded-start" src="data:image/png;base64,@(Convert.ToBase64String(Model.ImageData))" />
               }
         </div>
         <div class ="col-md-6">
             <div class="card-body">
                <div>
                    <h6>Caption</h6>
                    <p>@Model.Caption</p>
                </div>

                <div>
                    <h6>Uploaded On</h6>
                    <p>@Model.UploadedOn</p>
                </div>

                <div>
                    <h6>Description</h6>
                    <p>@Model.Description</p>
                </div>

                <div>
                    <h6>Location</h6>
                    <p>@Model.Location</p>
                </div>

                <div>
                    <h6>Tags</h6>
                    <p>@Model.Tags</p>
                </div>
            </div>
         </div>
    </div>
    <div>
            @*<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |*@
            <a class="btn btn-primary" asp-action="Index">Back to List</a>
    </div>
</div>
